<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.niveda.filemanager.MainActivity"
    android:background="#29dcbb">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="File List in SyncPic Folder"
        android:id="@+id/textView"

        android:textColor="#d21818" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="File 1: "
        android:id="@+id/List1"
        android:textColor="#1c297a"
        android:layout_below="@+id/textView"
        android:layout_marginTop="71dp" />

    <TextView
        android:id="@+id/FileName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F1"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/List1"
        android:textStyle="bold"
        android:textSize="15sp"
        android:clickable="true"
        android:textColor="#ffff0000"
        android:layout_marginTop="71dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="File 2 :"
        android:id="@+id/List2"

        android:textColor="#1c297a"
        android:layout_below="@+id/List1"/>
    <TextView
        android:id="@+id/FileName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:clickable="true"
        android:textColor="#ff00ff00"
        android:text="F2"
        android:layout_toRightOf="@+id/List2"
        android:layout_below="@+id/List1"
        android:layout_marginLeft="30dp"

/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="File 3: "
        android:id="@+id/List3"
        android:textColor="#1c297a"

        android:layout_below="@+id/List2"
         />
    <TextView
        android:id="@+id/FileName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F3"
        android:textStyle="bold"
        android:textSize="18sp"
        android:clickable="true"
        android:textColor="#ff0000ff"
        android:layout_toRightOf="@+id/List3"
        android:layout_below="@+id/List2"
        android:layout_marginLeft="30dp"
      />

</RelativeLayout>
